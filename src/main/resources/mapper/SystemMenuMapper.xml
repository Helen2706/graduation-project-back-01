<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.luhuiling.graduation.dao.SystemMenuDao">
    <select id="get" resultType="SystemMenuDO">
        SELECT * FROM system_menu WHERE id = #{value}
    </select>

    <select id="list" resultType="SystemMenuDO">
        SELECT * FROM system_menu
        <where>
                        <if test="id != null and id != ''">
                 and id = #{id}
            </if>
                        <if test="name != null and name != ''">
                 and name = #{name}
            </if>
                        <if test="type != null and type != ''">
                 and type = #{type}
            </if>
                        <if test="url != null and url != ''">
                 and url = #{url}
            </if>
                        <if test="authority != null and authority != ''">
                 and authority = #{authority}
            </if>
                        <if test="parentid != null and parentid != ''">
                 and parentId = #{parentid}
            </if>
                    </where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="count" resultType="int">
        select count(*) from system_menu
        <where>
                            <if test="id != null and id != ''"> and id = #{id} </if>
                            <if test="name != null and name != ''"> and name = #{name} </if>
                            <if test="type != null and type != ''"> and type = #{type} </if>
                            <if test="url != null and url != ''"> and url = #{url} </if>
                            <if test="authority != null and authority != ''"> and authority = #{authority} </if>
                            <if test="parentid != null and parentid != ''"> and parentId = #{parentid} </if>
                    </where>
    </select>

    <insert id="save" parameterType="SystemMenuDO"  useGeneratedKeys="true" keyProperty="id">
        INSERT INTO system_menu
        (
                                                  `name`,                                           `type`,                                           `url`,                                           `authority`,                                           `parentId`                          )
        VALUES (
                                        #{name},                                 #{type},                                 #{url},                                 #{authority},                                 #{parentId}                    )
    </insert>

    <update id="update" parameterType="SystemMenuDO">
        update system_menu
        <set>
                                                                            <if test="name != null">`name` = #{name}, </if>
                                                                <if test="type != null">`type` = #{type}, </if>
                                                                <if test="url != null">`url` = #{url}, </if>
                                                                <if test="authority != null">`authority` = #{authority}, </if>
                                                                <if test="parentid != null">`parentId` = #{parentid}</if>
                                    </set>
        where id = #{id}
    </update>

    <delete id="remove">
        delete from system_menu where id = #{value}
    </delete>

    <delete id="batchRemove">
        delete from system_menu where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>